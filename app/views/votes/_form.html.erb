# TODO: popup links using jquery
%>
<%= form.input :candidate_id, as: :hidden %>
<%= render partial: 'votes/candidate', object: form.object.candidate %>
<% if form.object.frozen? %>
  <%= content_tag :li do %>
    <%= form.input :rank, as: :hidden %><%=candidate_label form.object.candidate %>
  <% end %>
<% elsif race.is_ranked? -%>
  <%= form.input :rank, as: :select, required: false,
        label: candidate_label( form.object.candidate ),
        include_blank: true, collection: form.object.candidate.race.rank_options %>
<% else -%>
  <%= form.input :rank, as: :boolean, required: false,
     label: candidate_label( form.object.candidate ) %>
<% end -%>

