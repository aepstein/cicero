<h2>New vote for <%=h @race %> race</h2>

<%= error_messages_for :vote %>

<% form_for( :vote,
             @vote,
             :url => election_ballot_votes_url( @vote.ballot.election, @vote.ballot ),
             :html => { :method => :post } ) do |f| %>

<%= render :partial => 'form',
           :locals => { :f => f, :race => @race, :user => @vote.ballot.user } %> 

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', election_ballot_path( @vote.ballot.election, @vote.ballot ) %>
