<%=content_tag :div, class: 'row' do %>
  <%=content_tag :div, class: 'span3' do %>
    <%=content_tag :ul, class: 'nav nav-list races-nav' do %>
      <% election.races.each do |race| %>
        <%=content_tag :li, link_to( race.name, "#race-#{race.id}" ) %>
      <% end %>
    <% end %>
  <% end %>
  <%=content_tag :div, class: 'span9' do %>
    <%=content_tag :ul do %>
      <%=content_tag :li, link_to( 'Download Races Summary (csv)',
        election_path( election, format: :csv ) ) %>
      <%=content_tag :li, link_to( 'Download PmWiki Source (txt)',
        election_path( election, format: :txt ) ) %>
    <% end %>
    <%=render partial: 'races/races', object: election.races %>
  <% end %>
<% end %>

