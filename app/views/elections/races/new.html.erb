<h2>New race for <%=h @race.election.name %> election</h2>

<%= error_messages_for :race %>

<% form_for(:race,
            @race,
            :url => election_races_url(@race.election),
            :html => { :method => :post } ) do |f| %>

<%= render :partial => 'form',
           :locals => { :f => f } %> 

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', election_races_path( @race.election ) %>
