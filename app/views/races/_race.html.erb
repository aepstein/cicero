<%= table_row_tag do %>
  <td><%= race.name %></td>
  <td><%= race.slots %></td>
  <td><%= race.is_ranked? ? 'Yes' : 'No' %></td>
  <td><%= race.roll %></td>
  <td><%= link_to 'Show', race %></td>
  <td><%= link_to( 'Edit', edit_race_path( race ) ) if permitted_to? :edit, race %></td>
  <td><%= link_to( 'Destroy', race_path( race ), :confirm => 'Are you sure?',
  :method => :delete) if permitted_to? :destroy, race  %></td>
<% end %>

