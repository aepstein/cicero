<h2>New candidate for <%=h @candidate.race %> race in <%=h @candidate.race.election %> election</h2>

<%= error_messages_for :candidate %>

<% form_for( :candidate,
             @candidate,
             :url => election_race_candidates_url( @candidate.race.election,
                                                   @candidate.race ),
             :html => { :method => :post, :multipart => true } ) do |f| %>

<%= render :partial => 'form',
           :locals => { :f => f } %> 

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', election_race_candidates_path( @candidate.race.election, @candidate.race ) %>
