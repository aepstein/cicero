<%= content_tag :div, id: "candidate-#{candidate}" %>
<% if ::Rails.env != 'test' %>
<%=image_tag candidate.picture.url(:thumb), class: 'candidate-thumb' %>
<% else %>
<% end %>
<p>
  <b>Name:</b> <%=h candidate.name %>
</p>

<p>
  <b>Statement:</b>
</p>

<%=markdown candidate.statement %>

<p>
  <b>Disqualified?</b> <%= candidate.disqualified? ? 'Yes' : 'No' %>
</p>
<% end %>

