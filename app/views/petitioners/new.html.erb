<h2>New petitioner for <%= @petitioner.candidate %></h2>

<% form_for( :petitioner, @petitioner, :url => candidate_petitioners_url( @petitioner.candidate ) ) do |f| %>

<%= render :partial => 'form', :object => f %>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<p>
<%= link_to 'Back', candidate_petitioners_path( @petitioner.candidate ) %>
</p>

