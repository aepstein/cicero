<p>
  <b>Net id:</b> <%=h @user.net_id %>
</p>

<p>
	<b>Email:</b> <%=h @user.email %>
</p>

<p>
  <b>First name:</b> <%=h @user.first_name %>
</p>

<p>
  <b>Last name:</b> <%=h @user.last_name %>
</p>

<p><b>Admin?</b> <%= @user.admin ? 'Yes' : 'No' %> </p>

<h3>Allowed elections</h3>

<% Election.allowable.all(:include => :rolls, :order => 'rolls.name ASC').each do |election| %>
  <% if @user.rolls.where( :election_id => election.id ).length > 0 %>
  <h4><%= election.name %></h4>
      <ul>
      <% @user.rolls.where( :election_id => election.id ).each do |roll| %>
        <li><%= roll.name %></li>
      <% end %>
      </ul>
  <% end %>
<% end %>

<p>
<% if permitted_to? :edit, @user %>
<%= link_to 'Edit', edit_user_path(@user) %> |
<% end %>
<%= link_to 'Back', users_path %>
</p>

