<% form.semantic_fields_for :votes, vote do |subform| %>
<%= subform.input :candidate_id, :as => :hidden %>
<% if race.is_ranked? -%>
<%= subform.input :rank, :as => :select, :label => vote.candidate.name,
      :include_blank => true, :collection => vote.candidate.race.rank_options,
      :label_method => :to_s, :value_method => :to_i %>
<% else -%>
<%= subform.input :rank, :as => :boolean, :label => vote.candidate.name %>
<% end -%>
<% end -%>

